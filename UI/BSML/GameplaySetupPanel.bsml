<bg child-expand-width="true" min-width="120">
  <modifier-container child-expand-width="true" min-width="120">    
  
    <toggle-setting
      id="EnableLobbyMirror"
      value="EnableLobbyMirror"
      on-change="SetEnableLobbyMirror"
      bind-value="true"
      text="Enable Lobby Mirror"
      hover-hint="Show a mirror avatar of yourself in the lobby."
    />

    <horizontal pad-top="5"/>
    
    <toggle-setting
      id="EnableSelfHologram"
      value="EnableSelfHologram"
      on-change="SetEnableSelfHologram"
      bind-value="true"
      text="Enable Self Hologram"
      hover-hint="When you're in 1st place, show a mirror hologram of yourself."
    />
    <toggle-setting
      id="ForceSelfHologram"
      value="ForceSelfHologram"
      on-change="SetForceSelfHologram"
      bind-value="true"
      text="Always show Self Hologram"
      hover-hint="Always show a mirror hologram of yourself during gameplay, no matter what place you're in."
    />
    <toggle-setting
      id="EnableDuelHologram"
      value="EnableDuelHologram"
      on-change="SetEnableDuelHologram"
      bind-value="true"
      text="Show Duel Self Hologram"
      hover-hint="Enable Self Hologram for the Duel layout (1v1)."
    />
    
    <horizontal pad-top="5"/>
    
    <toggle-setting
      id="InvertMirror"
      value="InvertMirror"
      on-change="SetInvertMirror"
      bind-value="true"
      text="Invert mirror"
      hover-hint="Invert your mirrored avatar, so left/right positions are flipped, like it is on the results screen."
    />
    
  </modifier-container>
</bg>